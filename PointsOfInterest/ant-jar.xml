<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="export" name="Create Jar for Project PointsOfInterest">
	
	<property name="jar.name" value="PointsOfInterest.jar"/>
	<property name="jar.dest" value="D:/Development/bukkit/BukkitPlugins/PointsOfInterest/build/${jar.name}"/>
	<property name="classes.dir" value="D:/Development/bukkit/BukkitPlugins/PointsOfInterest/target/classes/" />
	<property name="api.jar" value="D:/Development/bukkit/BukkitPlugins/PointsOfInterest/lib/PointsOfInterestAPI.jar"/>
	<property name="export.dir" value="D:/minecraft/bukkit/plugins/"/>
	
	<target name="jar">
		<delete file="${jar.dest}"/>
        <jar destfile="${jar.dest}" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <fileset dir="${classes.dir}"/>
            <zipfileset excludes="META-INF/*.SF" src="${api.jar}"/>
        </jar>
    </target>
	
	<target name="export" depends="jar">
	    <delete file="${export.dest}{${jar.name}"/>
		<copy file="${jar.dest}" todir="${export.dir}" />		   
	</target>
</project>
